generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String
  phone    String?
  role     Role       @default(CUSTOMER)
  status   UserStatus @default(ACTIVE)

  medicines Medicine[] 
  orders    Order[] 
  reviews   Review[]
  cart      CartItem[]

  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  orderItems OrderItem[]
}

model Category {
  id        String     @id @default(uuid())
  name      String     @unique
  medicines Medicine[]
}

model Medicine {
  id           String  @id @default(uuid())
  name         String
  description  String
  manufacturer String
  price        Decimal
  stock        Int
  image        String?
  isApproved   Boolean @default(false)
  isActive     Boolean @default(true)

  approvedBy String?
  approvedAt DateTime?

  sellerId   String
  categoryId String

  seller     User        @relation(fields: [sellerId], references: [id])
  category   Category    @relation(fields: [categoryId], references: [id])
  reviews    Review[]
  orderItems OrderItem[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  cartItems CartItem[]

  @@index([categoryId])
  @@index([manufacturer])
  @@index([price])
}

model CartItem {
  id         String @id @default(uuid())
  userId     String
  medicineId String
  quantity   Int

  user     User     @relation(fields: [userId], references: [id])
  medicine Medicine @relation(fields: [medicineId], references: [id])

  @@unique([userId, medicineId])
}

model Order {
  id     String      @id @default(uuid())
  userId String
  status OrderStatus @default(PLACED)
  total  Decimal

  paymentMethod PaymentMethod @default(COD)
  paymentStatus PaymentStatus @default(PENDING)

  user     User          @relation(fields: [userId], references: [id])
  items    OrderItem[]
  shipping ShippingInfo?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrderItem {
  id         String      @id @default(uuid())
  orderId    String
  medicineId String
  sellerId   String
  quantity   Int
  price      Decimal
  status     OrderStatus @default(PLACED)

  order    Order    @relation(fields: [orderId], references: [id])
  medicine Medicine @relation(fields: [medicineId], references: [id])
  seller   User     @relation(fields: [sellerId], references: [id])

  @@index([sellerId])
}

model ShippingInfo {
  id         String @id @default(uuid())
  orderId    String @unique
  name       String
  phone      String
  address    String
  city       String
  postalCode String
  country    String

  order Order @relation(fields: [orderId], references: [id])
}

model Review {
  id         String  @id @default(uuid())
  rating     Int
  comment    String?
  userId     String
  medicineId String

  user     User     @relation(fields: [userId], references: [id])
  medicine Medicine @relation(fields: [medicineId], references: [id])

  @@unique([userId, medicineId])
}

enum Role {
  CUSTOMER
  SELLER
  ADMIN
}

enum UserStatus {
  ACTIVE
  BANNED
}

enum OrderStatus {
  PLACED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentMethod {
  COD
}

enum PaymentStatus {
  PENDING
  PAID
}
